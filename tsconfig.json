{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "es5",
		"module": "esnext",
		"jsx": "preserve",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"noEmit": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"paths": {
			"@core-config/*": [
				"pages/api/config/*"
			],
			"@core-middlewares/*": [
				"pages/api/middlewares/*"
			],
			"@core-data/*": [
				"pages/api/data/*"
			]
		}
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	]
}
